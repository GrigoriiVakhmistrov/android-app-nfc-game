<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tzadmin.nfc_reader_writer">

    <uses-sdk android:minSdkVersion="10" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".SharedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ScanNfcActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ValidationActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CubeActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ThrowCubes"
            android:screenOrientation="landscape" />
        <activity
            android:name=".TeamsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ShopActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ScanNfcNonstopActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CheckinScaner"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ActivitysesActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SpickersActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".RouteActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".QuestActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>